<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>5F4E31</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>5F4E31</color>
		</image>

		<text name="system_description" extra="true">
			<visible>false</visible>
			<text>The Atari Jaguar CD is a CD-ROM peripheral for the Atari Jaguar video game console. Codenamed Jaguar II, Jaguar CD was released on September 21, 1995 for US $149.95. Only 11 games were released for the Jaguar CD during its lifetime.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
		</textlist>

	</view>
	
</theme>
