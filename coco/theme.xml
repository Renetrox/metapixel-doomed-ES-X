<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>bedbf9</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>bedbf9</color>
		</image>

		<text name="system_description" extra="true">
			<visible>false</visible>
			<text>TRS-80 Color Computer. 1980. Up to 640x225 with 16 colors.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.png</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.png</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
		</textlist>

	</view>
	
</theme>