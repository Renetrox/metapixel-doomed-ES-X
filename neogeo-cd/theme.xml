<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>f79226</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>f79226</color>
		</image>

		<text name="system_description" extra="true">
			<visible>false</visible>
			<text>Neo Geo CD is the second home video game console of SNK's Neo Geo family, released in September 9, 1994 in Japan, December 1994 in Europe and January 1996 in North America, four years after its cartridge-based counterpart, in an effort to reduce manufacturing costs.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
		</textlist>

	</view>
	
</theme>
