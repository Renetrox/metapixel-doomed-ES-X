<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>00d5ff</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>00d5ff</color>
		</image>

		<text name="system_description" extra="true">
			<visible>false</visible>
			<text>The Nintendo Switch was released March 3, 2017. It is a tablet that can either be docked for home console use or used as a portable device, making it a hybrid console.  The Switch succeeded the Wii U and competes with Microsoft's Xbox One and Sony's PlayStation 4.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.png</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.png</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
		</textlist>

	</view>
	
</theme>
